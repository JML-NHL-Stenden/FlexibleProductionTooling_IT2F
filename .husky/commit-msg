#!/bin/sh
# Husky is optional in this repo (esp. on fresh checkouts / CI).
# If husky isn't installed, don't block commits.
if [ -f "$(dirname "$0")/_/husky.sh" ]; then
  . "$(dirname "$0")/_/husky.sh"
fi

COMMIT_MSG_FILE="$1"
PATTERN='^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)(\(.+\))?: '

if ! grep -Eq "$PATTERN" "$COMMIT_MSG_FILE"; then
  cat <<'EOF'
â›” Commit message must follow Conventional Commits, e.g.:
  feat: add MQTT bridge checks
Allowed types: feat, fix, docs, style, refactor, perf, test, build, ci, chore, revert
EOF
  exit 1
fi

