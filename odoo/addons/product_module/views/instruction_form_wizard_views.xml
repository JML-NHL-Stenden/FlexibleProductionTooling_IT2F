<!-- product_module/views/instruction_form_wizard_views.xml -->
<odoo>
    <!-- Instruction Form Wizard View -->
    <record id="view_instruction_form_wizard" model="ir.ui.view">
        <field name="name">instruction.form.wizard.form</field>
        <field name="model">product_module.instruction.form.wizard</field>
        <field name="arch" type="xml">
            <form string="Instruction Form">
                <sheet>
                    <!-- Single Window Layout - Steps List -->
                    <div style="width: 100%; min-height: 600px;">
                        
                        <!-- Steps List -->
                        <div style="background: white; border-radius: 16px; padding: 24px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); display: flex; flex-direction: column; min-height: 600px;">
                            <h3 style="color: #2c3e50; margin-bottom: 16px; font-weight: 600; display: flex; align-items: center;">
                                <i class="fa fa-list-ol" style="color: #fd7e14; margin-right: 8px;"/> Process Steps
                            </h3>
                            
                            <div class="alert alert-info" role="alert" style="margin-bottom: 16px; padding: 12px; font-size: 13px;">
                                <i class="fa fa-lightbulb-o"/>
                                <strong>Tip:</strong> Add process steps for this instruction. Click the image icon to upload an image for each step.
                            </div>
                            
                            <!-- Steps List -->
                            <field name="step_ids" style="flex: 1;">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="step_title" string="Step Title"/>
                                    <field name="step_type" string="Step Type"/>
                                    <field name="step_image" string="Image" widget="image" options="{'size': [64, 64]}"/>
                                </list>
                            </field>
                        </div>
                    </div>
                    
                    <!-- Hidden field for product reference -->
                    <field name="product_id" invisible="1"/>
                </sheet>
                
                <footer>
                    <button string="Save &amp; Close" name="action_save_steps" type="object" class="btn btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

