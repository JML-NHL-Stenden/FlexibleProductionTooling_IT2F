<!-- product_module/views/component_views.xml -->
<odoo>
    <!-- Component List View -->
    <record id="view_component_list" model="ir.ui.view">
        <field name="name">product.module.component.list</field>
        <field name="model">product_module.component</field>
        <field name="arch" type="xml">
            <list string="Components">
                <field name="name"/>
                <field name="component_type"/>
                <field name="usage_count" string="Used in Products"/>
                <field name="image" widget="image" options="{'size': [64, 64]}"/>
            </list>
        </field>
    </record>

    <!-- Component Form View -->
    <record id="view_component_form" model="ir.ui.view">
        <field name="name">product.module.component.form</field>
        <field name="model">product_module.component</field>
        <field name="arch" type="xml">
            <form string="Component Details">
                <sheet>
                    <div class="pm-red-gradient-header">
                        <div class="pm-header-content">
                            <div class="pm-image-container-large">
                                <field name="image" widget="image" options="{'size': [100, 100]}"/>
                            </div>
                            <div class="pm-flex-1">
                                <h1 class="pm-header-title">
                                    <field name="name" placeholder="Enter Component Name" required="1" class="pm-header-field"/>
                                </h1>
                                <div class="pm-flex-center">
                                    <span class="pm-badge">
                                        <i class="fa fa-tag"/> <field name="component_type" placeholder="Component Type" required="1" class="pm-field-inline"/>
                                    </span>
                                    <span class="pm-badge">
                                        <i class="fa fa-cube"/> Used in <field name="usage_count"/> Products
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="pm-grid-1-1">
                        <!-- Used in Products -->
                        <div class="pm-card-no-margin">
                            <h3 class="pm-section-title">
                                <i class="fa fa-cube pm-icon-spacing pm-icon-green"/> Used in Products
                            </h3>
                            <field name="product_ids" widget="many2many_tags"
                                   context="{'default_page_id': page_id}"
                                   options="{'no_create': True}"/>
                            <div class="pm-info-text">
                                <i class="fa fa-info-circle"/> Select products that use this component
                            </div>
                        </div>

                        <!-- Used in Categories -->
                        <div class="pm-card-no-margin">
                            <h3 class="pm-section-title">
                                <i class="fa fa-folder pm-icon-spacing" style="color: #007bff;"/> Used in Categories
                            </h3>
                            <field name="product_type_ids" widget="many2many_tags"
                                   context="{'default_page_id': page_id}"
                                   options="{'no_create': True}"/>
                            <div class="pm-info-text">
                                <i class="fa fa-info-circle"/> Select categories that use this component
                            </div>
                        </div>
                    </div>

                    <!-- Products Display -->
                    <div class="pm-card-no-margin" invisible="not product_ids">
                        <h3 class="pm-section-title">
                            <i class="fa fa-list pm-icon-spacing pm-icon-green"/> Products Using This Component
                        </h3>
                        <field name="product_ids" readonly="1">
                            <kanban>
                                <field name="name"/>
                                <field name="product_code"/>
                                <field name="image"/>
                                <templates>
                                    <t t-name="card">
                                        <div class="oe_kanban_card pm-kanban-card pm-kanban-card-green pm-width-280">
                                            <div class="oe_kanban_content pm-kanban-card-content">
                                                <div class="pm-kanban-card-flex">
                                                    <!-- Product Image -->
                                                    <div class="pm-image-container-small">
                                                        <field name="image" widget="image" options="{'size': [60, 60]}"/>
                                                    </div>

                                                    <!-- Product Info -->
                                                    <div class="pm-flex-1-min-width">
                                                        <strong class="pm-kanban-title-inline">
                                                            <field name="name"/>
                                                        </strong>
                                                        <div class="pm-kanban-badge-container">
                                                            <span class="pm-badge-dark">
                                                                <i class="fa fa-barcode"/> <field name="product_code"/>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Components -->
    <record id="action_component" model="ir.actions.act_window">
        <field name="name">All Components</field>
        <field name="res_model">product_module.component</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_component_list"/>
    </record>

    <!-- Menu item for All Components -->
    <menuitem id="menu_all_components"
              name="All Components"
              parent="menu_product_module_root"
              action="action_component"
              sequence="40"/>
</odoo>