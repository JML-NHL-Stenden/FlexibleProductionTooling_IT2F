<!-- product_module/views/component_views.xml -->
<odoo>
    <!-- Component List View -->
    <record id="view_component_list" model="ir.ui.view">
        <field name="name">product.module.component.list</field>
        <field name="model">product_module.component</field>
        <field name="arch" type="xml">
            <list string="Components">
                <field name="name"/>
                <field name="component_type"/>
                <field name="usage_count" string="Used in Products"/>
                <field name="image" widget="image" options="{'size': [64, 64]}"/>
            </list>
        </field>
    </record>

    <!-- Component Form View -->
    <record id="view_component_form" model="ir.ui.view">
        <field name="name">product.module.component.form</field>
        <field name="model">product_module.component</field>
        <field name="arch" type="xml">
            <form string="Component Details">
                <sheet>
                    <div style="background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%); border-radius: 16px; padding: 24px; margin-bottom: 24px; color: white;">
                        <div style="display: flex; align-items: center; gap: 20px;">
                            <div style="width: 100px; height: 100px; border-radius: 16px; overflow: hidden; background: rgba(255,255,255,0.2); display: flex; align-items: center; justify-content: center; border: 3px solid rgba(255,255,255,0.3);">
                                <field name="image" widget="image" options="{'size': [100, 100]}"/>
                            </div>
                            <div style="flex: 1;">
                                <h1 style="color: white; margin: 0 0 8px 0; font-size: 24px; font-weight: 700;">
                                    <field name="name" placeholder="Enter Component Name" required="1" style="color: white; background: transparent; border: none; font-size: 24px;"/>
                                </h1>
                                <div style="display: flex; gap: 12px; align-items: center; flex-wrap: wrap;">
                                    <span style="background: rgba(255,255,255,0.2); border-radius: 20px; padding: 6px 12px; font-size: 12px; font-weight: 600;">
                                        <i class="fa fa-tag"/> <field name="component_type" placeholder="Component Type" required="1" style="color: white; background: transparent; border: none; width: 200px;"/>
                                    </span>
                                    <span style="background: rgba(255,255,255,0.2); border-radius: 20px; padding: 6px 12px; font-size: 12px; font-weight: 600;">
                                        <i class="fa fa-cube"/> Used in <field name="usage_count"/> Products
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 24px; margin-bottom: 24px;">
                        <!-- Used in Products -->
                        <div style="background: white; border-radius: 16px; padding: 24px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                            <h3 style="color: #2c3e50; margin-bottom: 16px; font-weight: 600;">
                                <i class="fa fa-cube" style="color: #28a745; margin-right: 8px;"/> Used in Products
                            </h3>
                            <field name="product_ids" widget="many2many_tags"
                                   context="{'default_page_id': page_id}"
                                   options="{'no_create': True}"/>
                            <div style="font-size: 12px; color: #6c757d; margin-top: 8px;">
                                <i class="fa fa-info-circle"/> Select products that use this component
                            </div>
                        </div>

                        <!-- Used in Categories -->
                        <div style="background: white; border-radius: 16px; padding: 24px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                            <h3 style="color: #2c3e50; margin-bottom: 16px; font-weight: 600;">
                                <i class="fa fa-folder" style="color: #007bff; margin-right: 8px;"/> Used in Categories
                            </h3>
                            <field name="product_type_ids" widget="many2many_tags"
                                   context="{'default_page_id': page_id}"
                                   options="{'no_create': True}"/>
                            <div style="font-size: 12px; color: #6c757d; margin-top: 8px;">
                                <i class="fa fa-info-circle"/> Select categories that use this component
                            </div>
                        </div>
                    </div>

                    <!-- Products Display -->
                    <div style="background: white; border-radius: 16px; padding: 24px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);" invisible="not product_ids">
                        <h3 style="color: #2c3e50; margin-bottom: 16px; font-weight: 600;">
                            <i class="fa fa-list" style="color: #28a745; margin-right: 8px;"/> Products Using This Component
                        </h3>
                        <field name="product_ids" readonly="1">
                            <kanban>
                                <field name="name"/>
                                <field name="product_code"/>
                                <field name="image"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <div class="oe_kanban_card" style="border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); margin: 8px; border-left: 4px solid #28a745; width: 280px;">
                                            <div class="oe_kanban_content" style="padding: 16px;">
                                                <div style="display: flex; align-items: center; gap: 12px;">
                                                    <!-- Product Image -->
                                                    <div style="width: 60px; height: 60px; border-radius: 8px; overflow: hidden; background: #f8f9fa; display: flex; align-items: center; justify-content: center; border: 2px solid #e9ecef; flex-shrink: 0;">
                                                        <field name="image" widget="image" options="{'size': [60, 60]}"/>
                                                    </div>

                                                    <!-- Product Info -->
                                                    <div style="flex: 1; min-width: 0;">
                                                        <strong style="font-size: 14px; color: #2c3e50; display: block; margin-bottom: 4px;">
                                                            <field name="name"/>
                                                        </strong>
                                                        <div style="display: flex; gap: 6px; align-items: center; flex-wrap: wrap;">
                                                            <span style="background: #6c757d; color: white; border-radius: 6px; padding: 2px 6px; font-size: 10px;">
                                                                <i class="fa fa-barcode"/> <field name="product_code"/>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Components -->
    <record id="action_component" model="ir.actions.act_window">
        <field name="name">All Components</field>
        <field name="res_model">product_module.component</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_component_list"/>
    </record>

    <!-- Menu item for All Components -->
    <menuitem id="menu_all_components"
              name="All Components"
              parent="menu_product_module_root"
              action="action_component"
              sequence="40"/>
</odoo>