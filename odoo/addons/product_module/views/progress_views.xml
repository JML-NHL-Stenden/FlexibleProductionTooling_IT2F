<!-- product_module/views/progress_views.xml - SIMPLIFIED VERSION -->
<odoo>
    <!-- Progress List View-->
    <record id="view_progress_list" model="ir.ui.view">
        <field name="name">product.module.progress.list</field>
        <field name="model">product_module.progress</field>
        <field name="arch" type="xml">
            <list string="Workstation Tracking">
                <field name="name" string="Workstation"/>
                <field name="product_id" string="Product" widget="many2one"/>
                <field name="product_code" string="Product Code"/>
                <field name="total_steps" string="Total Steps"/>
                <field name="completed_steps" string="Completed"/>
                <field name="progress_percentage" string="Progress %" widget="progressbar"/>
                <button name="action_mark_complete" type="object" string="Complete Step" class="btn-success" confirm="Mark this step as complete?"/>
                <button name="action_reset_progress" type="object" string="Reset" class="btn-warning" confirm="Reset progress to zero?"/>
            </list>
        </field>
    </record>

    <!-- Progress Form View - Simplified Single Column -->
    <record id="view_progress_form" model="ir.ui.view">
        <field name="name">product.module.progress.form</field>
        <field name="model">product_module.progress</field>
        <field name="arch" type="xml">
            <form string="Workstation Progress">
                <sheet>
                    <!-- Header matching product design -->
                    <div class="pm-header-purple">
                        <div class="pm-header-content">
                            <div class="pm-image-container-large">
                                <field name="product_image" widget="image" options="{'size': [100, 100]}"/>
                            </div>
                            <div class="pm-flex-1">
                                <h1 class="pm-header-title">
                                    <field name="name" placeholder="Enter workstation name" required="1" class="pm-header-field-full"/>
                                </h1>
                                <div class="pm-flex-center">
                                    <span class="pm-badge">
                                        <i class="fa fa-cube"/> <field name="product_name"/>
                                    </span>
                                    <span class="pm-badge">
                                        <i class="fa fa-barcode"/> <field name="product_code"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Single Column Layout -->
                    <div class="pm-card">
                        <h3 class="pm-section-title">
                            <i class="fa fa-info-circle pm-icon-spacing pm-icon-blue"/> Workstation Information
                        </h3>

                        <group>
                            <field name="product_id" string="Product" required="1"
                                   context="{'default_page_id': page_id}"
                                   options="{'no_create': False}"/>
                        </group>

                        <!-- Progress Display -->
                        <div class="pm-progress-container">
                            <div class="pm-stat-value-large">
                                <field name="progress_percentage"/>%
                            </div>
                            <div class="pm-stat-label-large">
                                Assembly Progress
                            </div>
                            <div class="pm-progress-stats">
                                <div class="pm-progress-stat">
                                    <div class="pm-progress-stat-label">Completed</div>
                                    <div class="pm-progress-stat-value-success">
                                        <field name="completed_steps"/>
                                    </div>
                                </div>
                                <div class="pm-progress-stat">
                                    <div class="pm-progress-stat-label">Total Steps</div>
                                    <div class="pm-progress-stat-value">
                                        <field name="total_steps"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Placeholder Actions -->
                    <div class="pm-card-no-margin">
                        <h3 class="pm-section-title">
                            <i class="fa fa-cog pm-icon-spacing" style="color: #fd7e14;"/> Placeholder Actions
                        </h3>
                        <div class="pm-flex-row">
                            <button name="action_mark_complete" type="object" class="btn btn-success pm-btn-rounded">
                                <i class="fa fa-check pm-icon-spacing"/> Mark Step Complete
                            </button>
                            <button name="action_reset_progress" type="object" class="btn btn-warning pm-btn-rounded">
                                <i class="fa fa-refresh pm-icon-spacing"/> Reset Progress
                            </button>
                            <button name="action_open_product" type="object" class="btn btn-info pm-btn-rounded" invisible="not product_id">
                                <i class="fa fa-external-link pm-icon-spacing"/> View Product Details
                            </button>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Updated Action for Progress -->
    <record id="action_progress" model="ir.actions.act_window">
        <field name="name">All Workstations</field>
        <field name="res_model">product_module.progress</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_progress_list"/>
    </record>

    <!-- Updated Progress Tab in Main Page -->
    <record id="view_product_assemble_form_with_progress" model="ir.ui.view">
        <field name="name">product.assemble.page.form.with.progress</field>
        <field name="model">product_module.page</field>
        <field name="inherit_id" ref="product_module.view_product_assemble_form"/>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">

                <!-- Workstation Tracking -->
                <page string="Workstation Tracking" name="progress_tracking">
                    <div class="alert alert-info">
                        <strong><i class="fa fa-desktop"/> Workstation Tracking</strong> - Monitor assembly progress across different workstations. Select a product to track its assembly progress.
                    </div>

                    <div class="pm-margin-bottom-16 pm-flex-row">
                        <button name="action_create_progress" type="object" class="btn btn-primary pm-btn-rounded">
                            <i class="fa fa-plus pm-icon-spacing"/> Create Workstation
                        </button>
                        <button name="%(product_module.action_progress)d" type="action" class="btn btn-secondary pm-btn-rounded">
                            <i class="fa fa-list pm-icon-spacing"/> View All Workstations
                        </button>
                    </div>

                    <!-- Workstation Display -->
                    <field name="progress_ids" context="{'default_page_id': id}" widget="kanban">
                        <kanban create="false">
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="product_name"/>
                            <field name="product_code"/>
                            <field name="product_image"/>
                            <field name="total_steps"/>
                            <field name="completed_steps"/>
                            <field name="progress_percentage"/>
                            <templates>
                                <t t-name="card">
                                    <div class="oe_kanban_card oe_kanban_global_click pm-kanban-card pm-kanban-card-purple pm-width-320">
                                        <div class="oe_kanban_content pm-kanban-card-content">
                                            <div class="pm-kanban-card-flex-start">
                                                <!-- Product Image -->
                                                <div class="pm-image-container-small">
                                                    <field name="product_image" widget="image" options="{'size': [60, 60]}"/>
                                                </div>

                                                <!-- Workstation Info -->
                                                <div class="pm-flex-1">
                                                    <!-- Workstation Name -->
                                                    <div class="pm-kanban-title-medium">
                                                        <field name="name"/>
                                                    </div>

                                                    <!-- Product Info -->
                                                    <div class="pm-field-group-margin">
                                                        <div style="font-size: 14px; color: #495057;">
                                                            <field name="product_name"/>
                                                        </div>
                                                        <div class="pm-kanban-text-value">
                                                            <i class="fa fa-barcode"/> <field name="product_code"/>
                                                        </div>
                                                    </div>

                                                    <!-- Progress Information -->
                                                    <div class="pm-kanban-stats">
                                                        <div class="pm-kanban-stats-value">
                                                            <field name="progress_percentage"/>% Complete
                                                        </div>
                                                        <div class="pm-kanban-stats-label">
                                                            <field name="completed_steps"/> / <field name="total_steps"/> Steps
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                    </field>

                    <!-- Empty State -->
                    <div class="alert alert-warning pm-empty-state" invisible="progress_ids">
                        <i class="fa fa-desktop pm-empty-icon"/>
                        <h4 class="pm-empty-title">No Workstations Configured</h4>
                        <p class="pm-empty-text">Create your first workstation to start tracking assembly progress.</p>
                        <button name="action_create_progress" type="object" class="btn btn-warning">
                            <i class="fa fa-plus pm-icon-spacing"/> Create First Workstation
                        </button>
                    </div>
                </page>
            </xpath>

            <!-- Add Workstations stat to header - using multiple fallback xpaths -->
            <xpath expr="//div[contains(@class, 'pm-stats-container')]" position="inside">
                <div class="pm-stat-box">
                    <div class="pm-stat-value">
                        <field name="progress_count"/>
                    </div>
                    <div class="pm-stat-label">Workstations</div>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Menu item for All Progress Tasks -->
    <menuitem id="menu_all_progress"
              name="All Workstations"
              parent="menu_product_module_root"
              action="action_progress"
              sequence="50"/>
</odoo>