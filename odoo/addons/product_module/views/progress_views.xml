<!-- product_module/views/progress_views.xml - SIMPLIFIED VERSION -->
<odoo>
    <!-- Progress List View-->
    <record id="view_progress_list" model="ir.ui.view">
        <field name="name">product.module.progress.list</field>
        <field name="model">product_module.progress</field>
        <field name="arch" type="xml">
            <list string="Workstation Tracking">
                <field name="name" string="Workstation"/>
                <field name="product_id" string="Product" widget="many2one"/>
                <field name="product_code" string="Product Code"/>
                <field name="total_steps" string="Total Steps"/>
                <field name="completed_steps" string="Completed"/>
                <field name="progress_percentage" string="Progress %" widget="progressbar"/>
                <button name="action_mark_complete" type="object" string="Complete Step" class="btn-success" confirm="Mark this step as complete?"/>
                <button name="action_reset_progress" type="object" string="Reset" class="btn-warning" confirm="Reset progress to zero?"/>
            </list>
        </field>
    </record>

    <!-- Progress Form View - Simplified Single Column -->
    <record id="view_progress_form" model="ir.ui.view">
        <field name="name">product.module.progress.form</field>
        <field name="model">product_module.progress</field>
        <field name="arch" type="xml">
            <form string="Workstation Progress">
                <sheet>
                    <!-- Header matching product design -->
                    <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 16px; padding: 24px; margin-bottom: 24px; color: white;">
                        <div style="display: flex; align-items: center; gap: 20px;">
                            <div style="width: 100px; height: 100px; border-radius: 16px; overflow: hidden; background: rgba(255,255,255,0.2); display: flex; align-items: center; justify-content: center; border: 3px solid rgba(255,255,255,0.3);">
                                <field name="product_image" widget="image" options="{'size': [100, 100]}"/>
                            </div>
                            <div style="flex: 1;">
                                <h1 style="color: white; margin: 0 0 8px 0; font-size: 24px; font-weight: 700;">
                                    <field name="name" placeholder="Enter workstation name" required="1" style="color: white; background: transparent; border: none; font-size: 24px; width: 100%;"/>
                                </h1>
                                <div style="display: flex; gap: 12px; align-items: center; flex-wrap: wrap;">
                                    <span style="background: rgba(255,255,255,0.2); border-radius: 20px; padding: 6px 12px; font-size: 12px; font-weight: 600;">
                                        <i class="fa fa-cube"/> <field name="product_name"/>
                                    </span>
                                    <span style="background: rgba(255,255,255,0.2); border-radius: 20px; padding: 6px 12px; font-size: 12px; font-weight: 600;">
                                        <i class="fa fa-barcode"/> <field name="product_code"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Single Column Layout -->
                    <div style="background: white; border-radius: 16px; padding: 24px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); margin-bottom: 24px;">
                        <h3 style="color: #2c3e50; margin-bottom: 16px; font-weight: 600;">
                            <i class="fa fa-info-circle" style="color: #007bff; margin-right: 8px;"/> Workstation Information
                        </h3>

                        <group>
                            <field name="product_id" string="Product" required="1"
                                   context="{'default_page_id': page_id}"
                                   options="{'no_create': False}"/>
                        </group>

                        <!-- Progress Display -->
                        <div style="background: #f8f9fa; border-radius: 12px; padding: 20px; margin: 16px 0; text-align: center;">
                            <div style="font-size: 36px; font-weight: 700; color: #28a745; margin-bottom: 8px;">
                                <field name="progress_percentage"/>%
                            </div>
                            <div style="font-size: 16px; color: #6c757d; margin-bottom: 16px;">
                                Assembly Progress
                            </div>
                            <div style="display: flex; justify-content: space-between; background: white; padding: 12px; border-radius: 8px;">
                                <div style="text-align: center;">
                                    <div style="font-size: 14px; color: #6c757d;">Completed</div>
                                    <div style="font-size: 20px; font-weight: 700; color: #28a745;">
                                        <field name="completed_steps"/>
                                    </div>
                                </div>
                                <div style="text-align: center;">
                                    <div style="font-size: 14px; color: #6c757d;">Total Steps</div>
                                    <div style="font-size: 20px; font-weight: 700; color: #495057;">
                                        <field name="total_steps"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Placeholder Actions -->
                    <div style="background: white; border-radius: 16px; padding: 24px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                        <h3 style="color: #2c3e50; margin-bottom: 16px; font-weight: 600;">
                            <i style="color: #fd7e14; margin-right: 8px;"/> Placeholder Actions
                        </h3>
                        <div style="display: flex; gap: 12px; flex-wrap: wrap;">
                            <button name="action_mark_complete" type="object" class="btn btn-success" style="border-radius: 8px; font-weight: 600; padding: 12px 24px;">
                                <i class="fa fa-check" style="margin-right: 8px;"/> Mark Step Complete
                            </button>
                            <button name="action_reset_progress" type="object" class="btn btn-warning" style="border-radius: 8px; font-weight: 600; padding: 12px 24px;">
                                <i class="fa fa-refresh" style="margin-right: 8px;"/> Reset Progress
                            </button>
                            <button name="action_open_product" type="object" class="btn btn-info" invisible="not product_id" style="border-radius: 8px; font-weight: 600; padding: 12px 24px;">
                                <i class="fa fa-external-link" style="margin-right: 8px;"/> View Product Details
                            </button>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Updated Action for Progress -->
    <record id="action_progress" model="ir.actions.act_window">
        <field name="name">All Workstations</field>
        <field name="res_model">product_module.progress</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_progress_list"/>
    </record>

    <!-- Updated Progress Tab in Main Page -->
    <record id="view_product_assemble_form_with_progress" model="ir.ui.view">
        <field name="name">product.assemble.page.form.with.progress</field>
        <field name="model">product_module.page</field>
        <field name="inherit_id" ref="product_module.view_product_assemble_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">

                <!-- Workstation Tracking -->
                <page string="Workstation Tracking" name="progress_tracking">
                    <div class="alert alert-info">
                        <strong><i class="fa fa-desktop"/> Workstation Tracking</strong> - Monitor assembly progress across different workstations. Select a product to track its assembly progress.
                    </div>

                    <div style="margin-bottom: 16px; display: flex; gap: 12px; flex-wrap: wrap;">
                        <button name="action_create_progress" type="object" class="btn btn-primary" style="border-radius: 8px; font-weight: 600; padding: 12px 24px;">
                            <i class="fa fa-plus" style="margin-right: 8px;"/> Create Workstation
                        </button>
                        <button name="%(product_module.action_progress)d" type="action" class="btn btn-secondary" style="border-radius: 8px; font-weight: 600; padding: 12px 24px;">
                            <i class="fa fa-list" style="margin-right: 8px;"/> View All Workstations
                        </button>
                    </div>

                    <!-- Workstation Display -->
                    <field name="progress_ids" context="{'default_page_id': id}" widget="kanban">
                        <kanban create="false">
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="product_name"/>
                            <field name="product_code"/>
                            <field name="product_image"/>
                            <field name="total_steps"/>
                            <field name="completed_steps"/>
                            <field name="progress_percentage"/>
                            <templates>
                                <t t-name="kanban-box">
                                    <div class="oe_kanban_card oe_kanban_global_click" style="border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); margin: 8px; border-left: 4px solid #667eea; width: 320px; min-height: 160px;">
                                        <div class="oe_kanban_content" style="padding: 16px;">
                                            <div style="display: flex; align-items: flex-start; gap: 16px;">
                                                <!-- Product Image -->
                                                <div style="width: 60px; height: 60px; border-radius: 12px; overflow: hidden; background: #f8f9fa; display: flex; align-items: center; justify-content: center; border: 2px solid #e9ecef; flex-shrink: 0;">
                                                    <field name="product_image" widget="image" options="{'size': [60, 60]}"/>
                                                </div>

                                                <!-- Workstation Info -->
                                                <div style="flex: 1;">
                                                    <!-- Workstation Name -->
                                                    <div style="font-size: 16px; font-weight: 700; color: #2c3e50; margin-bottom: 8px;">
                                                        <field name="name"/>
                                                    </div>

                                                    <!-- Product Info -->
                                                    <div style="margin-bottom: 12px;">
                                                        <div style="font-size: 14px; font-weight: 600; color: #495057;">
                                                            <field name="product_name"/>
                                                        </div>
                                                        <div style="font-size: 12px; color: #6c757d;">
                                                            <i class="fa fa-barcode"/> <field name="product_code"/>
                                                        </div>
                                                    </div>

                                                    <!-- Progress Information -->
                                                    <div style="background: #f8f9fa; padding: 8px; border-radius: 6px; text-align: center;">
                                                        <div style="font-size: 14px; font-weight: 600; color: #28a745; margin-bottom: 4px;">
                                                            <field name="progress_percentage"/>% Complete
                                                        </div>
                                                        <div style="font-size: 12px; color: #6c757d;">
                                                            <field name="completed_steps"/> / <field name="total_steps"/> Steps
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                    </field>

                    <!-- Empty State -->
                    <div class="alert alert-warning" invisible="progress_ids" style="text-align: center; padding: 40px;">
                        <i class="fa fa-desktop" style="font-size: 48px; color: #ffc107; margin-bottom: 16px; display: block;"/>
                        <h4 style="color: #856404; margin-bottom: 16px;">No Workstations Configured</h4>
                        <p style="color: #856404; margin-bottom: 20px;">Create your first workstation to start tracking assembly progress.</p>
                        <button name="action_create_progress" type="object" class="btn btn-warning">
                            <i class="fa fa-plus" style="margin-right: 8px;"/> Create First Workstation
                        </button>
                    </div>
                </page>
            </xpath>

            <xpath expr="//div[@style='display: flex; gap: 12px;']" position="inside">
                <div style="background: rgba(255,255,255,0.2); border-radius: 12px; padding: 12px 20px; text-align: center;">
                    <div style="font-size: 24px; font-weight: 700; color: white;">
                        <field name="progress_count"/>
                    </div>
                    <div style="font-size: 12px; color: rgba(255,255,255,0.8);">Workstations</div>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Menu item for All Progress Tasks -->
    <menuitem id="menu_all_progress"
              name="All Workstations"
              parent="menu_product_module_root"
              action="action_progress"
              sequence="50"/>
</odoo>