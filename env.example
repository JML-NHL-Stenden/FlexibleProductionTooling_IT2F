# Copy this file to `.env` and fill in the values.
#
# Notes:
# - Docker Compose reads `.env` from the same folder as `docker-compose.yml`.
# - Variables referenced in `docker-compose.yml` must exist in `.env` (or be set in your shell),
#   otherwise Compose prints: "variable is not set. Defaulting to a blank string."

# -------------------------
# Arkite (required for mqtt-bridge, and optional fallback for Odoo)
# -------------------------
ARKITE_API_BASE=
ARKITE_API_KEY=
ARKITE_UNIT_ID=
ARKITE_TEMPLATE_NAME=

# -------------------------
# Postgres / ports
# -------------------------
POSTGRES_VERSION=
POSTGRES_DB=
POSTGRES_USER=
POSTGRES_PASSWORD=
DB_PORT_HOST=

# -------------------------
# Odoo / app
# -------------------------
ODOO_VERSION=
ODOO_HTTP_PORT=
DB_HOST=
DB_USER=
DB_PASS=

# -------------------------
# pgAdmin
# -------------------------
PGADMIN_DEFAULT_EMAIL=
PGADMIN_DEFAULT_PASSWORD=
PGADMIN_PORT=

# -------------------------
# MQTT
# -------------------------
MOSQUITTO_PORT=
MQTT_HOST=
MQTT_PORT=
MQTT_TOPIC_QR=
MQTT_TOPIC_CODES=
MQTT_TOPIC_DETAILS=

# -------------------------
# Misc
# -------------------------
ODOO_BASE_URL=
CHECK_INTERVAL=
LOG_LEVEL=
IDLE_INTERVAL_SEC=

