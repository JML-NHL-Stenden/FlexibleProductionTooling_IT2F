# ------------------------
# Versions
# ------------------------
POSTGRES_VERSION=15
ODOO_VERSION=18.0

# ------------------------
# Database
# ------------------------
POSTGRES_DB=odoo
POSTGRES_USER=odoo
POSTGRES_PASSWORD=odoo

DB_HOST=db
DB_PORT=5432
DB_PORT_HOST=15432
DB_NAME=odoo
DB_USER=odoo
DB_PASS=odoo

# ------------------------
# Odoo
# ------------------------
ODOO_HTTP_PORT=8069

# ------------------------
# pgAdmin
# ------------------------
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_PORT=5050

# ------------------------
# MQTT / Mosquitto
# ------------------------
MOSQUITTO_PORT=1883
MQTT_HOST=mqtt
MQTT_PORT=1883

# ------------------------
# MQTT Publisher (topics)
# ------------------------
MQTT_TOPIC_CODES=factory/products/all_product_codes
MQTT_TOPIC_DETAILS=factory/products/all_product_details
MQTT_TOPIC_QR=arkite/trigger/QR

# ------------------------
# Odoo base URL (docker network)
# ------------------------
ODOO_BASE_URL=http://odoo:8069

# ------------------------
# Publisher runtime options
# ------------------------
CHECK_INTERVAL=5
LOG_LEVEL=INFO

# ------------------------
# Arkite API Configuration (DO NOT COMMIT REAL KEYS)
# ------------------------
ARKITE_API_BASE=https://<ARKITE_HOST_OR_IP>/api/v1
ARKITE_API_KEY=changeme
ARKITE_UNIT_ID=changeme
ARKITE_TEMPLATE_NAME=FPT-Template

# ------------------------
# Additional MQTT Bridge Settings
# ------------------------
IDLE_INTERVAL_SEC=1
PRETTY_JSON=false
